{
  "name": "ti-basic-autocomplete",
  "description": "Autocomplete for the TI-BASIC programming language",
  "author": "beastmatser",
  "license": "MIT",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/beastmatser/ti-basic-autocomplete.git"
  },
  "publisher": "beastmatser",
  "categories": [],
  "keywords": [
    "multi-root ready"
  ],
  "engines": {
    "vscode": "^1.43.0"
  },
  "activationEvents": [
    "onLanguage:8xp"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "languages": [
      {
        "id": "8xp",
        "aliases": [
          "8xp"
        ],
        "extensions": [
          ".8xp"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "8xp",
        "scopeName": "source.8xp",
        "path": "./syntaxes/8xp.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "LSP 8xp",
      "properties": {}
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "sh ./scripts/e2e.sh"
  },
  "devDependencies": {
    "@types/mocha": "^8.2.2",
    "@types/node": "^12.12.0",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "eslint": "^7.26.0",
    "mocha": "^8.3.2",
    "typescript": "^4.5.5"
  }
}
